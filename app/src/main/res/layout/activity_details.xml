<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".activity.DetailsActivity">
    <LinearLayout
        android:id="@+id/details_background_top"
        android:layout_width="match_parent"
        android:layout_height="280dp"
        android:orientation="vertical"
        android:background="#0097A7"
        tools:ignore="MissingConstraints">
        <ImageView
            android:id="@+id/details_avatar"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/peo_female"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="70dp" />
        <TextView
            android:id="@+id/details_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="丰川祥子"
            android:textSize="40sp"
            android:textStyle="bold"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="20dp" />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/details_background_bottom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="20dp"
        tools:ignore="MissingConstraints">
        <TextView
            android:id="@+id/details_phone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="12345678910"
            android:textSize="25sp"
            android:textStyle="bold"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="20dp" />
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="end"
            android:layout_marginRight="40dp">
            <Button
                android:id="@+id/details_phone_button"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:background="@drawable/details_phone"
                android:foreground="?selectableItemBackground"
                android:layout_marginLeft="100dp"
                android:layout_marginTop="20dp" />
            <Button
                android:id="@+id/details_message_button"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:background="@drawable/details_message"
                android:foreground="?selectableItemBackground"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="20dp" />
        </RelativeLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="20dp"
        tools:ignore="MissingConstraints">
        <TextView
            android:id="@+id/details_sex"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="男"
            android:textSize="25sp"
            android:textStyle="bold"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="20dp" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="20dp"
        tools:ignore="MissingConstraints">
        <TextView
            android:id="@+id/details_remark"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="null"
            android:textSize="25sp"
            android:textStyle="bold"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="20dp" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginTop="70dp"
        tools:ignore="MissingConstraints">
        <Button
            android:id="@+id/details_back_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:text="返回" />
        <Button
            android:id="@+id/details_delete_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:text="删除" />
        <Button
            android:id="@+id/details_edit_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:text="编辑" />
    </LinearLayout>
</LinearLayout>
